@import "bootstrap-sprockets"; 
@import "bootstrap"; 

.main-body{
margin-top:100px;
}

.main-visual{
width:100%;
height:250px;
background-image: url("<%= asset_path('toptop.jpeg') %>");
background-size:cover;
}

.main-text{
padding-top:45px;
color:white;
text-align: center;
font-size:20px;
}

.sidebar{
margin-top:100px;
font-size:18px;
}

ul{
list-style:none;
}

.product-page{
text-align: left;
}

.pagepage{
text-align:center;
}

.top-body{
padding-top:120px;
}

.product-image{
float:left;
}

/*商品詳細ページの商品画像の横のテキスト*/
.product-text{
padding:30px 15px;
float:left;
}
/*会員詳細ページのカートボタン*/
.cart{
float:right;
padding-top:120px;
padding-right:160px;
}

/*会員詳細ページの商品タイトル*/
.product-title{
font-size:30px;
}

/*会員詳細ページの商品説明*/
.product-description{
margin-top:15px;
font-size:18px;
}

/*会員詳細ページの価格*/
.product-price{
font-size:30px;
margin-top:15px;
}

.shipping-title{
margin-top:100px;
}

.shipping-list{
margin-top:50px;
}
