<div class="container">
	<div class="row">
        
        <h1 class="mypage">マイページ <i class="fas fa-user-cog"></i></h1>

		<div class="col-xs-5">

					<h2>登録情報</h2>
					<a><%= link_to '編集する', edit_customers_path, class:"btn btn-primary" %></a>

					<table>
						<tr>
							<th>氏名</th>
							<td><%= @user.name_sei %> <%= @user.name_mei %></td>
						</tr>
						<tr>
							<th>カナ</th>
							<td><%= @user.yomi_sei %> <%= @user.yomi_mei %></td>
						</tr>
						<tr>
							<th>郵便番号</th>
							<td><%= @user.postal_code %></td>
						</tr>
						<tr>
							<th>住所</th>
							<td><%= @user.address %></td>
						</tr>
						<tr>
							<th>電話番号</th>
							<td><%= @user.tell %></td>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<td><%= @user.email %></td>
						</tr>
					</table>
      </div>

     <div class="col-xs-7">

				<h3 class="mypage_shipping">配送先登録・編集 <i class="fas fa-home"></i></h3>
				<%= link_to "登録・編集する", customers_shipping_addresses_path, class:"btn btn-success" %>

		 </div>
	</div>
</div>