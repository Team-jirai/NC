<div class="container">
  <div class="row">
  
  <%= render 'layouts/sidebar' %>

    <div class="col-xs-10">
     <div class="main-body">
      <div class="row">
          <h2>商品一覧<i class="fas fa-cookie-bite"></i></h2><p class="count"><%= link_to "全#{Product.all.count}件" %></p>
          <% @products.each do |product| %>
          <div class="col-md-3">
             <div>
              　<div class="product-page">
                <%= link_to customers_product_path(product.id) do %>
                  <%= attachment_image_tag product, :picture, format:'jpeg', size:"150x150" %><br>
                  <%= product.name %><br>
                  <p><%= product.price_with_tax(product.price) %>円</p><br>
                </div>
                <% end %>
             </div>
           </div>
         <% end %>
       </div>
       <div class="pagepage">
　　　　<%= paginate @products %>
       </div>
     </div>
     </div>
  </div>
</div>

     