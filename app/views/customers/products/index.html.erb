<div class="container">
  <div class="row">
<%= render 'layouts/sidebar' %>
    <div class="col-xs-9">
     <div class="main-body">
      <div class="row">
          <h2>商品一覧</h2><%= link_to "全#{Product.all.count}件" %>
          <% @products.each do |product| %>
          <div class="col-md-3">
             <div>
              　<div class="product-page">
                <%= link_to @product_path do %>
                  <%= attachment_image_tag product, :picture, format:'jpeg', size:"50x50" %><br>
                  <%= product.name %><br>
                  <p><%= product.price %>円</p><br>
                </div>
                <% end %>
             </div>
           </div>
         <% end %>
       </div>
　　　　<%= paginate @products %>
     </div>
     </div>
  </div>
</div>

     