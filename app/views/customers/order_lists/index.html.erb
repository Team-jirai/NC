<div class="container">
	<div class="row">
	    <div class="orderlist_title">
	       <h3>注文履歴一覧</h3>
	    </div>

           <table class="table table-bordered">
           	  <thead>
           	     <tr class="active">
           	    	 <th>注文日</th>
           	    	 <th>配送先</th>
           	    	 <th>注文商品</th>
           	    	 <th>支払金額</th>
           	    	 <th>ステータス</th>
           	    	 <th>注文詳細</th>
           	      </tr>
           	   </thead>

           	   <tbody>
           	   	　　　　 <% @order_lists.each do |order_list| %>
                  <tr>

					<td>
						<%= order_list.created_at %><!-- ※注文日 -->
					</td>
					<td>
						<%= order_list.address %><!-- ※配送先 -->
					</td>
					<td>
						<% order_list.order_details.each do |order_detail| %>
						<%= order_detail.product.name %>
						<% end %><!-- ※注文商品 -->
					</td>
					<td>
						<p><%= order_list.total_price %>円</p><!-- ※支払い金額 -->
					</td>
					<td>
						<%= order_list.status %><!-- ※ステータス -->
					</td>
					<td>
						<%= link_to "表示する", customers_order_list_path(@order_list.id), class:"btn btn-primary" %><!-- ※注文詳細 -->
					</td>

					    <% end %>
			      </tr>
			     </tbody>
		   </table>
    </div>
</div>