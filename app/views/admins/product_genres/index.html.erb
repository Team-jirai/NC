<div class="midasi">
	<h3 class="midasitext">ジャンル一覧・追加</h3>
</div>

<div class="genre_form">
	<%= form_for @newgenre, url: admins_product_genres_path do |f| %>
		<%= f.label :ジャンル %>
		<%= f.text_field :genre %>
		<%= f.radio_button :is_valid, true %>
		<%= f.label :is_valid, "有効" %>
  		<%= f.radio_button :is_valid, false %>
  		<%= f.label :is_valid, "無効" %>
  		<%= f.submit '追加' %>
  	<% end %>
</div>
<div class="genrelists">
	<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @genres.each do |genre| %>
		<tr>
			<td><%= genre.genre %></td>
			<%# if genre.is_valid %>
				<!-- <td>有効</td> -->
			<%# else %>
				<!-- <td>無効</td> -->
			<%# end %>
<!-- 			<td><%#= genre.is_valid ? '有効' : '無効'%></td> -->
			<td><%= genre.is_valid ? t('valid' ) : t('invalid')%></td>
			<td><div class="btn btn-primary active"><%= link_to "編集", edit_admins_product_genre_path(genre.id) %></div></td>
		</tr>
		<% end %>
	</tbody>
	</table>
</div>