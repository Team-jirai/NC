<div class="midasi">
	<h2>ジャンル一覧・追加</h2>
</div>

<div class="genre_form">
	<%= form_for @newgenre, url: admins_product_genres_path do |f| %>
		<%= f.label :ジャンル %>
		<%= f.text_field :genre %>
		<%= f.radio_button :is_valid, :true %>
		<%= f.label :is_valid, "有効", {value: :true, style: "display: inline-block;"} %>
  		<%= f.radio_button :is_valid, :false %>
  		<%= f.label :is_valid, "無効", {value: :false, style: "display: inline-block;"} %>
  		<%= f.submit '追加' %>
  	<% end %>
</div>
<div class="genrelists">
	<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @genres.each do |genre| %>
		<tr>
			<td><%= genre.genre %></td>
			<td><%= genre.is_valid_i18n %></td>
			<td><%= link_to "編集", edit_admins_product_genre_path(genre.id) %></td>
		</tr>
		<% end %>
	</tbody>
	</table>
</div>