<div class="midasi">
	<h3 class="midasitext">注文履一覧</h3>
</div>

<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @order_lists.each do |order_list| %>
		<tr>
			<td><a href="<%= admins_order_list_path(order_list.id) %>"><%= l order_list.created_at%></a></td>
			<td><%= order_list.customer.name_sei%><%= order_list.customer.name_mei%></td>
			<td><%= order_list.order_details.all.sum(:number) %></td>
			<td><%= order_list.status_i18n%></td>
		</tr>
		<% end %>
	</tbody>
</table>