<div class="midasi">
	<h2>商品一覧</h2>
</div>

<div class="addproduct">
	<%= link_to "商品追加", new_admins_product_path %>
</div>

<div class="genrelists">
	<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>商品ID</th>
			<th>商品名</th>
			<th>税抜価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |product| %>
		<tr>
			<td><%= product.id %></td>
			<td><a href="<%= admins_product_path(product.id) %>"><%= product.name %></a></td>
			<td><%= converting_to_jpy(product.price) %></td>
			<td><%= product.product_genre.genre %></td>
			<td><%= product.sales_status_i18n %></td>
		</tr>
		<% end %>
	</tbody>
	</table>
</div>