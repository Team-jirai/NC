<div class="midasi">
	<h3 class="midasitext">商品編集</h3>
</div>

<div class="product_form">
<%= form_for @product, url: admins_product_path(@product.id) do |f| %>
	<div class="admin_picture">
		<%= attachment_image_tag @product, :picture, size: "200x200" %>
		<div class="picture">
			<%= f.attachment_field :picture %>
		</div>
	</div>

	<div class="explain">
		<div class="product_name">
			<div class="admin_label">
				<%= f.label :商品名 %>
			</div>
			<div class="explain_text">
				<%= f.text_field :name %>
			</div>
		</div>
		<div class="product_description">
			<div class="admins_label">
				<%= f.label :商品説明 %>
			</div>
			<div class="explains_text">
				<%= f.text_area :description %>
			</div>
		</div>
		<div class="product_genre">
			<div class="admin_label">
				<%= f.label :ジャンル %>
			</div>
			<div class="explain_text">
				<%= f.collection_select :product_genre_id, ProductGenre.all, :id, :genre, :prompt => "ジャンル" %>
			</div>
		</div>
		<div class="product_price">
			<div class="admin_label">
				<%= f.label :税抜価格 %>
			</div>
			<div class="explain_text">
				<%= f.text_field :price %>円
			</div>
		</div>
		<div class="product_status">
			<div class="admin_label">
				<%= f.label :販売ステータス %>
			</div>
			<div class="explain_text">
				<%= f.select :sales_status,options_for_select(Product.sales_statuses.keys.map {|k| [I18n.t("enums.product.sales_status.#{k}"), k]}) %>
			</div>
		</div>
		<div class="admin_button">
  			<%= f.submit '変更を保存' %>
  		</div>
  	</div>
<% end %>
</div>