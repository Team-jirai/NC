<div class="midasi">
	<h3 class="midasitext">会員一覧</h3>
</div>

<table class="table table-hover table-inverse">
	<thead>
		<tr>
			<th>会員ID</th>
			<th>氏名</th>
			<th>メールアドレス</th>
			<th>会員ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @customers.each do |customer| %>
		<tr>
			<td><%= customer.id %></td>
			<td><a href="<%= admins_customer_path(customer.id) %>"><%= customer.name_sei%><%= customer.name_mei%></a></td>
			<td><%= customer.email %></td>
			<td><%= customer.status %></td>
		</tr>
		<% end %>
	</tbody>
</table>