<!DOCTYPE html>
<html>
  <head>
    <title>NC</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">

        <nav class="nav navbar-nav navbar-left">
          <h2>長野ケーキ</h2>
        </nav>
        <% if admin_signed_in? %>
        <nav class="search_form">
        <%= text_field_tag :search %>
        <%= submit_tag ("Search") , class: 'search-btn'%>
        </nav>
        <% end %>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if customer_signed_in? %>
              <li><%= link_to 'マイページ', customers_mypage_path %></li>
              <li><%= link_to '商品一覧', 'http://localhost:3000/customers/products/' %></li>
              <li><%= link_to 'カート' %></li>
              <li><%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %></li><!-- 変更 -->
            <% elsif admin_signed_in? %>
              <li><%= link_to '商品一覧' %></li>
              <li><%= link_to '会員一覧' %></li>
              <li><%= link_to '注文履歴一覧' %></li>
              <li><%= link_to 'ジャンル一覧' %></li>
              <li><%= link_to 'ログアウト', '/customers/sign_out' %></li>
            <% else %>
              <li><%= link_to '商品一覧' %></li>
              <li><%= link_to '会員登録', '/customers/sign_up' %></li>
              <li><%= link_to 'ログイン', new_customer_session_path %></li>
            <% end %>
          </ul>
        </nav>

      </div>
    </header>

    <div class="container">
      <%= yield %>
      <p id="notice"><%= notice %></p>
    </div>
  </body>
</html>
